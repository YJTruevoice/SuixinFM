<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mine_top_layoutId"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/my_menu_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cover_default" />

        <TextView
            android:id="@+id/user_name_show"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="远方"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my0"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFF" />

            <TextView
                android:id="@+id/my_collect_btnId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_style"
                android:clickable="true"
                android:gravity="center"
                android:text="我的收藏"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/my1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFF" />

            <TextView
                android:id="@+id/my_down_btnId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/text_style"
                android:clickable="true"
                android:gravity="center"
                android:text="我的下载"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/my2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFF" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_layoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mine_top_layoutId" >
    </ListView>

</RelativeLayout>