<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.android.volley.toolbox.NetworkImageView 
 		android:id="@+id/comment_imageViewId"
 		android:layout_width="100dp"
 		android:layout_height="90dp"
 		android:layout_margin="5dp"/>
 	
 	 <TextView
        android:id="@+id/comment_nicknameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/comment_imageViewId"
        android:text="用户名"
        />
 	 
 	 <TextView
 	     android:id="@+id/comment_timeId"
 	     android:layout_width="wrap_content"
 	     android:layout_height="wrap_content"
 	     android:layout_alignBottom="@+id/comment_nicknameId"
 	     android:layout_alignParentRight="true"
 	     android:gravity="center_vertical"
 	     android:padding="3dp"
 	     android:text="时间"
 	     android:layout_marginRight="15dp"
 	     android:textSize="12sp" />
 	 
 	 <TextView
        android:id="@+id/comment_contentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/comment_timeId"
        android:layout_toRightOf="@id/comment_imageViewId"
        android:text="评论"
        />

 	 <TextView 
 	     android:id="@+id/comment_textViewId"
 	     android:layout_width="match_parent"
 	     android:layout_height="2dp"
 	     android:background="#F3F4F4"
 	     android:layout_below="@id/comment_imageViewId"
 	     />

 	 

</RelativeLayout>
