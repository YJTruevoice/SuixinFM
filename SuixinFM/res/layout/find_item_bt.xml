<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   	    
 	<com.android.volley.toolbox.NetworkImageView 
 		android:id="@+id/find_imageViewId"
 		android:layout_width="100dp"
 		android:layout_height="90dp"
 		android:layout_margin="5dp"/>
 	
 	 <TextView
        android:id="@+id/find_titleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/find_imageViewId"
        android:textColor="#000"
        android:text="清屏与富贵"
        />
 	 <TextView
        android:id="@+id/find_speakId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/find_titleId"
        android:layout_toRightOf="@id/find_imageViewId"
        android:textColor="#000"
        android:text="主播"
        />
 	 
 	 <TextView
        android:id="@+id/find_favnumId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/find_speakId"
        android:layout_toRightOf="@id/find_imageViewId"
        android:textColor="#000"
        android:text="收藏"
        />

 	 <TextView 
 	     android:id="@+id/textViewId"
 	     android:layout_width="match_parent"
 	     android:layout_height="2dp"
 	     android:background="#F3F4F4"
 	     android:layout_below="@id/find_imageViewId"
 	     />
</RelativeLayout>
